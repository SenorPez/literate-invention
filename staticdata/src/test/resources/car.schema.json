{
  "$schema": "http://json-schema.org/draft-6/schema",
  "title": "Project CARS Static Data API Car",
  "description": "JSON Representation of Project CARS Static Data API car.",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+((/[a-z0-9-]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    },
    "curies": {
      "type": "array",
      "items": {
        "properties": {
          "href": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "templated": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "href",
          "name",
          "templated"
        ]
      }
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "manufacturer": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "class": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "country": {
      "type": "string"
    },
    "drivetrain": {
      "type": "string"
    },
    "enginePosition": {
      "type": "string"
    },
    "engineType": {
      "type": "string"
    },
    "topSpeed": {
      "type": "integer"
    },
    "horsepower": {
      "type": "integer"
    },
    "acceleration": {
      "type": "number"
    },
    "braking": {
      "type": "number"
    },
    "weight": {
      "type": "integer"
    },
    "torque": {
      "type": "integer"
    },
    "weightBalance": {
      "type": "integer"
    },
    "wheelbase": {
      "type": "number"
    },
    "shiftPattern": {
      "type": "string"
    },
    "shifter": {
      "type": "string"
    },
    "gears": {
      "type": "integer"
    },
    "dlc": {
      "type": [
        "string",
        "null"
      ]
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "$ref": "#/definitions/curies"
        },
        "pcars:cars": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:class": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/standardLink"
          }
        },
        "pcars:liveries": {
          "$ref": "#/definitions/standardLink"
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "curies",
        "pcars:cars",
        "pcars:class",
        "pcars:liveries"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "manufacturer",
    "model",
    "country",
    "class",
    "year",
    "drivetrain",
    "enginePosition",
    "engineType",
    "topSpeed",
    "horsepower",
    "acceleration",
    "braking",
    "weight",
    "torque",
    "weightBalance",
    "wheelbase",
    "shiftPattern",
    "shifter",
    "gears",
    "dlc",
    "_links"
  ]
}