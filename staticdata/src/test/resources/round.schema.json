{
  "$schema": "http://json-schema.org/draft-6/schema",
  "title": "Project CARS Static Data API Car Race",
  "description": "JSON Representation of Project CARS Static Data API race.",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+(:[0-9]+)*((/[a-z0-9-]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    },
    "curies": {
      "type": "array",
      "items": {
        "properties": {
          "href": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "templated": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "href",
          "name",
          "templated"
        ]
      }
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "track": {
      "type": "string"
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "$ref": "#/definitions/standardLink"
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "$ref": "#/definitions/curies"
        },
        "pcars:races": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:rounds": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:track": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/standardLink"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "curies",
        "pcars:races",
        "pcars:rounds",
        "pcars:track"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "track",
    "_links"
  ]
}