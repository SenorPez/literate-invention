{
  "$schema": "http://json-schema.org/draft-6/schema",
  "title": "Project CARS Static Data API Car Livery",
  "description": "JSON Representation of Project CARS Static Data API car livery.",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+((/[a-z0-9-]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    },
    "curies": {
      "type": "array",
      "items": {
        "properties": {
          "href": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "templated": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "href",
          "name",
          "templated"
        ]
      }
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/standardLink"
              }
            },
            {
              "$ref": "#/definitions/standardLink"
            }
          ]
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "$ref": "#/definitions/curies"
        },
        "pcars:liveries": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/standardLink"
              }
            },
            {
              "$ref": "#/definitions/standardLink"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "curies",
        "pcars:liveries"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "_links"
  ]
}