{
  "$schema": "http://json-schema.org/draft-6/schema",
  "title": "Project CARS Static Data API Car",
  "description": "JSON Representation of Project CARS Static Data API car.",
  "definitions": {
    "standardLink": {
      "type": "object",
      "properties": {
        "href": {
          "type": "string",
          "pattern": "^http[s]?://[a-z.]+(:[0-9]+)*((/[a-z0-9-]+)+|/)$"
        }
      },
      "additionalProperties": false,
      "required": [
        "href"
      ]
    },
    "curies": {
      "type": "array",
      "items": {
        "properties": {
          "href": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "templated": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "href",
          "name",
          "templated"
        ]
      }
    }
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "class": {
      "type": "string"
    },
    "manufacturer": {
      "type": "string"
    },
    "country": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "drivetrain": {
      "type": "string"
    },
    "topSpeed": {
      "type": "integer"
    },
    "acceleration": {
      "type": "number"
    },
    "power": {
      "type": "integer"
    },
    "weight": {
      "type": "integer"
    },
    "gears": {
      "type": "integer"
    },
    "transmission": {
      "type": "string"
    },
    "engineType": {
      "type": "string"
    },
    "antilockBrakeSystem": {
      "type": "boolean"
    },
    "tractionControl": {
      "type": "boolean"
    },
    "stabilityControl": {
      "type": "boolean"
    },
    "controlDifficulty": {
      "type": "integer"
    },
    "corneringSpeed": {
      "type": "integer"
    },
    "dlc": {
      "type": [
        "string",
        "null"
        ]
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/standardLink"
              }
            },
            {
              "$ref": "#/definitions/standardLink"
            }
          ]
        },
        "index": {
          "$ref": "#/definitions/standardLink"
        },
        "curies": {
          "$ref": "#/definitions/curies"
        },
        "pcars:cars": {
          "$ref": "#/definitions/standardLink"
        },
        "pcars:class": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/standardLink"
          }
        },
        "pcars:liveries": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/standardLink"
              }
            },
            {
              "$ref": "#/definitions/standardLink"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "self",
        "index",
        "curies",
        "pcars:cars",
        "pcars:class",
        "pcars:liveries"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "class",
    "manufacturer",
    "class",
    "country",
    "year",
    "drivetrain",
    "topSpeed",
    "acceleration",
    "power",
    "weight",
    "gears",
    "transmission",
    "engineType",
    "antilockBrakeSystem",
    "tractionControl",
    "stabilityControl",
    "controlDifficulty",
    "corneringSpeed",
    "dlc",
    "_links"
  ]
}